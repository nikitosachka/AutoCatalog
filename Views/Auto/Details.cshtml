@model AutoCatalog.Models.Auto

<div class="details-container">
    <h1>@Model.Brand @Model.Model</h1>
    <div class="details-content">
        <div class="car-info">
            <img src="data:image/png;base64,@Model.ImageData" alt="@Model.Brand @Model.Model" width="500" height="500" />
            <p><strong>Рік:</strong> @Model.Year</p>
            <p><strong>Ціна:</strong> $@Model.Price.ToString("N0")</p>
            <p><strong>Пробіг:</strong> @Model.Mileage km</p>
            <p><strong>Тип палива:</strong> @Model.FuelType</p>
            <p><strong>Трансмісія:</strong> @Model.Transmission</p>
            <p><strong>Об'єм двигуна:</strong> @Model.EngineVolume L</p>
            <p><strong>Тип кузова:</strong> @Model.BodyType</p>
            <p><strong>Колір:</strong> @Model.Color</p>
            <p><strong>Опис:</strong> @Model.Description</p>
        </div>
        <div class="button-group">
            <a href="/Auto/Catalog" class="btn-primary">Назад до каталогу</a>
            <a href="/Auto/Buy/@Model.Id" class="btn-primary buy-button">Купити</a>
        </div>
    </div>
</div>

<style>
    .details-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #EDEDED;
        border-radius: 8px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: #000;
    }

    .details-content {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .car-info {
        background-color: white;
        padding: 15px;
        border-radius: 8px;
        text-align: left;
    }

    .car-info img {
        max-width: 100%;
        height: auto;
        margin-bottom: 15px;
        border-radius: 8px;
    }

    .car-info p {
        margin: 8px 0;
        font-size: 1.1em;
    }

    .button-group {
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .btn-primary {
        background-color: #2c3e50;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #34495e;
    }

    .buy-button {
        background-color: #000000;
    }

    .buy-button:hover {
        background-color: #444;
    }
</style>
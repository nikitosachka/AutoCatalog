@model AutoCatalog.Models.BuyViewModel

@{
    ViewData["Title"] = "Купити автомобіль";
}

<div class="car-info">
    <h1>Купити @Model.CarName</h1>

    <form asp-action="Buy" method="post" class="buy-form">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Ім'я</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label">Номер телефону</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="CarId" />
        <input type="hidden" asp-for="CarName" />
        <button type="submit" class="buy-button">Купити</button>
    </form>
</div>
@section Styles {
    <link href="~/css/form.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
